# IBKR Credentials
# Copy this file to .env and fill in your credentials
# NEVER commit .env to git!

TWS_USERID=your_ibkr_username
TWS_PASSWORD=your_ibkr_password

# IB Gateway connection mode:
#   paper = Connect to IBKR paper trading servers (delayed data, port 4002)
#   live  = Connect to IBKR live servers (real-time data, port 4001)
TRADING_MODE=paper

# Safety gate for live trading (must be "true" to allow real orders)
# This is checked by the python script when --mode live is used
ALLOW_LIVE_TRADING=false
